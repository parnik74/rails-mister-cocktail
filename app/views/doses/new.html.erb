<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <h4>What ingredient you want to add</h4>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.association :ingredient, collection: Ingredient.all, input_html: { class: "select2" }, include_hidden: false %>
      <%= f.input :description %>
      <%= f.submit "Add a dose of the ingredient", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">   
      <h1>Our Cocktails</h1>

      <ul>
        <% @cocktails.each do |cocktail| %>
          <li>
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </li>
        <% end %>
      </ul>
      <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary" %>
    </div>
 </div>
</div>
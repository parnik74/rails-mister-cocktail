<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">   
      <h2><%= @cocktail.name %></h2>
      <% @cocktail.doses.each do |dose|%>
      <p><%= dose.description %> - 
      <%= dose.ingredient.name %></p>
      <%= link_to "Delete the dose",
                  dose_path(dose),
                  method: :delete,
                  class: "btn btn-danger",
                  data: { confirm: 'Are you sure???'} %>
      <% end %>
      

      <%= link_to "Add doses", new_cocktail_dose_path(@cocktail), class: "btn btn-success" %>
      <%= link_to "Back to list", cocktails_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
</div>  
